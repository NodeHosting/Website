<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<style>
  .row {
    margin-top: 15px;
  }
</style>
<% if(user['dark-mode']) { %>
  <body class="hold-transitions dark-mode sidebar-collapse" style="overflow-y: hidden;">
<% } else { %>
  <body class="hold-transitions sidebar-collapse" style="overflow-y: hidden;">
<% } %>
    <div class="wrapper">
      <%- include('includes/headder') %>
        <div class="content-wrapper">
          <div class="content">
            <div class="row">
              <div class="col-md-3">
                <div class="card card-outline card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Delete Account</h3>
                  </div>
                  <div class="card-body">
                    <form method="post" action="/settings" role="form">
                      <button class="btn btn-danger" name="action" value="delete">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <div class="card card-outline">
                  <div class="card-header">
                    <h3 class="card-title">Set View Mode</h3>
                  </div>
                  <div class="card-body">
                    <form method="post" action="/settings" role="form">
                      <% if (user["dark-mode"]) { %>
                        <button class="btn btn-darker" name="action" value="dark-mode">Light Mode</button>
                      <% } else { %>
                        <button class="btn btn-darker" name="action" value="dark-mode">Dark Mode</button>  
                      <% } %>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>