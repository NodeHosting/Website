<nav class="main-header navbar navbar-expand navbar-dark">
  <ul class="navbar-nav">
    <li class="nav-link">
      <a href="/dashboard" class="btn-sm btn-default">Home</a>
    </li>
    <% if(user.admin) { %>
      <li class="nav-link">
        <a href="/admin">Admin</a>
      </li>  
    <% } %>
  </ul>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
      <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-comments"></i>
        <% if(user.messages.length > 0) { %> <span class="badge badge-danger navbar-badge"><%- user.messages.length %></span> <% } %>
      </a>
      <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        <% user.messages.forEach(msg => { %>
          <a href="/read/<%- msg.id %>" class="dropdown-item">
            <div class="media">
              <div class="media-body">
                <h3 class="dropdown-item-title"><%- msg.author %></h3>
                <p class="text-sm"><%- msg.message %></p>
              </div>
            </div>
          </a>
          <div class="dropdown-divider"></div>
        <% }) %>
      </div>
    </li>
  </ul>
</nav>