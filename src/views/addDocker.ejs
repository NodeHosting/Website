<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<head>
  <link
    rel="stylesheet"
    href="/css/addDocker.css"
  />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body class="hold-transition dark-mode sidebar-collapse" style="overflow: hidden;">
  <div class="wrapper">
    <div class="content-wrapper">
      <div class="row">
        <div class="col">
          <div class="card card-outline card-purple docker-box">
            <form action="/addDocker" method="post" enctype="multipart/form-data">
              <div class="card-body">
                  <div class="form-group">
                    <label for="dockerName">Docker Image Name</label>
                    <input name="name" type="text" class="form-control" id="dockerName" autocomplete="off" placeholder="Enter Image Name">
                  </div>
                  <div class="form-group">
                    <label for="fileInput">Code File</label>
                    <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" accept=".zip,.rar,.7zip" id="fileInput" name="code">
                        <label class="custom-file-label" for="fileInput">Choose File</label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group" id="variables">
                    <div id="origin">
                      <div class="row">
                        <div class="col-5">
                          <label for="key">Env Key</label>
                          <input class="form-control" id="key" name="key" placeholder="Key">
                        </div>
                        <div class="col-5">
                          <label for="value">Env Value</label>
                          <input class="form-control" id="value" name="value" placeholder="Value">
                        </div>
                        <button class="btn btn-success" type="button" style="height: 75%; margin-top: 2.1%; margin-left: 13%" id="add"><i class="fa-regular fa-plus"></i></button>
                      </div>
                    </div>
                  </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    $('#fileInput').change((e) => {
      const test = e.target.files[0].name;

      $('.custom-file-label')[0].innerText = test;
    });

    $(document).on('click', ":button", (ev) => {
      const target = ev.currentTarget;
      if(target.id == 'add') {
        const fuck = $('#origin').html();
        $('#variables').append(fuck);
      }
    });
  </script>
</body>

</html>